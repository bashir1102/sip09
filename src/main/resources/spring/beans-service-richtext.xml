<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">
	
	<bean class="com.springinpractice.ch09.comment.service.impl.RichTextFilter" />
	
	<!-- showdown.js maps Markdown to HTML -->
	<bean id="showdownJsResource" class="org.springframework.core.io.ClassPathResource">
		<constructor-arg value="/showdown.js" />
	</bean>
	
	<!-- Defines HTML tag whitelist -->
	<bean id="tagProviderResource" class="org.springframework.core.io.ClassPathResource">
		<constructor-arg value="/htmlcleaner.xml" />
	</bean>
	
	<util:property-path id="showdownJsFile" path="showdownJsResource.file" />
	<util:property-path id="tagProviderFile" path="tagProviderResource.file" />

	<bean id="tagProvider" class="org.htmlcleaner.ConfigFileTagProvider">
		<constructor-arg ref="tagProviderFile" />
	</bean>
</beans>
